<Page x:Class="InstructorShell.ControllerParametersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InstructorShell"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ControllerParametersPage">

    <Grid>
        <Border BorderBrush="#FFB5B5B5" BorderThickness="1" CornerRadius="12,12,12,12">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#8C737373" Offset="1"/>
                    <GradientStop Color="#83FFFFFF" Offset="0"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid Name="main_grid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="8*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="10*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="8*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="text1" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22" TextWrapping="Wrap" Text="О запуске:" Foreground="White" FontWeight="Bold"/>
                <TextBlock x:Name="text2" Grid.Column="3" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22" TextWrapping="Wrap" Text="О управлении:" Foreground="White" FontWeight="Bold"/>

                <Grid Name="zapusk_grid" Grid.Row="1" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.RowSpan="4" CornerRadius="12,12,12,12" Margin="-10,-10,-10,-10" Grid.ColumnSpan="4">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#8C000000"/>
                                <GradientStop Color="#884C4C4C" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>

                    <Image Source="/Images/widgets/turbo.png" Grid.Row="1" Margin="8,8,8,8"/>
                    <Image Source="/Images/widgets/dvigatel.png" Grid.Row="2" Margin="8,8,8,8"/>

                    <TextBlock x:Name="text_data" Grid.Column="1" Grid.Row="1" FontSize="22" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap" Text="ожидание данных" FontWeight="Bold">
                        <TextBlock.Foreground>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="Black"/>
                                <GradientStop Color="White" Offset="0.997"/>
                                <GradientStop Color="#FFADADAD"/>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                    </TextBlock>
                    <TextBlock x:Name="text_data2" Grid.Column="1" Grid.Row="2" FontSize="22" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap" Text="ожидание данных" FontWeight="Bold">
                        <TextBlock.Foreground>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="Black"/>
                                <GradientStop Color="White" Offset="0.997"/>
                                <GradientStop Color="#FFADADAD"/>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                    </TextBlock>
                    
                </Grid>

                <Grid Name="controllers_grid" Grid.Row="1" Grid.Column="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="0.1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="5*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.RowSpan="3" Grid.ColumnSpan="2" CornerRadius="12,12,12,12" Margin="-10,-10,-10,-10">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#8C000000"/>
                                <GradientStop Color="#884C4C4C" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>

                    <Image x:Name="vertical_bar" Source="/Images/widgets/bar_vertical.png" Grid.Column="0" Grid.Row="1"/>
                    <Image x:Name="vertical_bar2" Source="/Images/widgets/bar_horizontal.png" Grid.Column="1" Grid.Row="2" RenderTransformOrigin="0.5,0.5">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                                <SkewTransform/>
                                <RotateTransform Angle="0"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>
                    <Image x:Name="circle_bar" Source="/Images/widgets/bar_circle.png" Grid.Column="1" Grid.Row="1"/>

                    <Image x:Name="pointer_vertical" Source="/Images/widgets/pointer.png" Grid.Column="0" Grid.Row="1"  RenderTransformOrigin="0,0"/>
                    <Image x:Name="pointer_circle" Source="/Images/widgets/pointer.png" Grid.Column="1" Grid.Row="1" />
                    <Image x:Name="pointer_vertical2" Source="/Images/widgets/pointer.png" Grid.Column="1" Grid.Row="2"  RenderTransformOrigin="0,0"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>
